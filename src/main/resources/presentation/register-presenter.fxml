<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.isw.app.presentation.RegisterPresenter">
  <padding>
    <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
  </padding>

  <Label text="Registro de Cliente" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

  <HBox spacing="10">
    <Label text="Nombre:" minWidth="80" />
    <TextField fx:id="nameField" promptText="Ingrese su nombre" />
  </HBox>

  <HBox spacing="10">
    <Label text="Correo:" minWidth="80" />
    <TextField fx:id="emailField" promptText="Ingrese su correo" />
  </HBox>

  <HBox spacing="10">
    <Label text="Cédula:" minWidth="80" />
    <TextField fx:id="cedulaField" promptText="Ingrese su cédula" />
  </HBox>

  <HBox spacing="10">
    <Label text="Género:" minWidth="80" />
    <ComboBox fx:id="genderField">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="Masculino"/>
          <String fx:value="Femenino"/>
        </FXCollections>
      </items>
    </ComboBox>
  </HBox>

  <HBox spacing="10">
    <Label text="Nacimiento:" minWidth="80" />
    <DatePicker fx:id="birthdayField" promptText="Fecha de nacimiento" />
  </HBox>

  <HBox spacing="10">
    <Label text="Contraseña:" minWidth="80" />
    <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" />
  </HBox>

  <Button text="Registrarse" onAction="#onRegisterClick" maxWidth="200" />

  <Label fx:id="messageLabel" textFill="red" />
</VBox>

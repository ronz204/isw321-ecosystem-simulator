<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>


<ScrollPane fitToWidth="true" fitToHeight="true" styleClass="simulation"
  stylesheets="@simulation-presenter.css"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.isw.app.presentation.controllers.SimulationController">

  <HBox alignment="CENTER" spacing="20" styleClass="simulation-container">
    <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Panel de configuraci贸n -->
    <VBox spacing="12" maxWidth="380" styleClass="simulation-form">
      <Label text=" Configuraci贸n de Simulaci贸n" styleClass="simulation-form__title" />
      <Line endX="320" styleClass="simulation-form__divider" />

      <!-- Configuraci贸n Inicial -->
      <Label text="Configuraci贸n Inicial" styleClass="simulation-form__subtitle" />
      
      <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Turnos m谩ximos:" styleClass="simulation-form__label" />
        <TextField fx:id="fldTurns" promptText="Ej: 50" 
          styleClass="simulation-form__field" />
      </HBox>

      <Line endX="320" styleClass="simulation-form__divider" />

      <!-- Escenarios -->
      <Label text="Escenario" styleClass="simulation-form__subtitle" />
      
      <VBox spacing="6">
        <RadioButton fx:id="rdoBalanced" text="Ecosistema Equilibrado" 
          styleClass="simulation-form__radio" />
        <RadioButton fx:id="rdoPredatorDominant" text="Depredadores Dominantes" 
          styleClass="simulation-form__radio" />
        <RadioButton fx:id="rdoPreyDominant" text="Presas Dominantes" 
          styleClass="simulation-form__radio" />
      </VBox>

      <Line endX="320" styleClass="simulation-form__divider" />

      <!-- Expansiones -->
      <Label text="Expansiones (Opcional)" styleClass="simulation-form__subtitle" />
      
      <VBox spacing="6">
        <CheckBox fx:id="chkOmnivoreExpansion" text="Introducir omnivoros" 
          styleClass="simulation-form__checkbox" />
        <CheckBox fx:id="chkZombieMutation" text="Habilitar zombificaci贸n" 
          styleClass="simulation-form__checkbox" />
      </VBox>

      <Line endX="320" styleClass="simulation-form__divider" />

      <!-- Bot贸n -->
      <Button fx:id="btnStart" text="Iniciar" onAction="#onStartClick" maxWidth="Infinity"
        styleClass="simulation-form__button" />

      <Label fx:id="lblMessage" wrapText="true" styleClass="simulation-form__message" />
    </VBox>

    <!-- Matriz del ecosistema -->
    <VBox spacing="12" styleClass="matrix-container">
      <Label text=" Ecosistema (10x10)" styleClass="matrix-container__title" />
      <GridPane fx:id="gridMatrix" styleClass="matrix-grid" />
      
      <HBox spacing="15" alignment="CENTER">
        <Label fx:id="lblTurnInfo" text="Turno: 0" styleClass="matrix-container__turn-info" />
      </HBox>
    </VBox>
  </HBox>
</ScrollPane>